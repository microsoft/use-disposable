{
  "name": "use-disposable",
  "version": "0.0.0",
  "description": "A StrictMode safe hook that will create disposable instance during render",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "types": "lib/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsup --format esm",
    "build:cjs": "tsup --format cjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:ci": "vitest run",
    "type-check": "tsc -b tsconfig.json",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/use-disposable.git"
  },
  "author": "microsoft",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/microsoft/use-disposable/issues"
  },
  "homepage": "https://github.com/microsoft/use-disposable#readme",
  "peerDependencies": {
    "@types/react": ">=16.8.0 <19.0.0",
    "@types/react-dom": ">=16.8.0 <19.0.0",
    "react": ">=16.8.0 <19.0.0",
    "react-dom": ">=16.8.0 <19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "auto-changelog": "^2.4.0",
    "jsdom": "^20.0.3",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.5.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.25.6"
  }
}
